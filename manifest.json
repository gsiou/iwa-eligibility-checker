{
  "manifest_version": 2,
  "name": "IWA eligibility checker",
  "version": "1.0",
  "description": "Checks for strict CSP and other security headers required by Isolated Web Apps.",
  "permissions": [
    "webRequest",
    "tabs",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  }
}
